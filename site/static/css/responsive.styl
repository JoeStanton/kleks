// Larger phones to smaller landscape phones, and down
@media (max-width: 480px)

  body
    font-size: 14px

  .container
    padding: 14px
    border-left-width: 8px

  h1
    font-size: 2.5em
  h2
    font-size: 1.8em
  h3
    font-size: 1.3em
  h4
    font-size: 1.1em

  .site-name
    font-size: 2.8em

// Odd one
@media (max-width: 600px)
  
  article
    
    .sponsor
      float: none
      width: 100%
      margin: 1em auto

// Landscape on larger phone to smaller tablet
@media (min-width: 481px) and (max-width: 767px)
  
  .container
    padding: 20px
    border-left-width: 14px

  h1
    font-size: 3em
  h2
    font-size: 2em
  h3
    font-size: 1.5em
  h4
    font-size: 1.2em

  .site-name
    font-size: 3.5em


