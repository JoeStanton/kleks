// Following imports are part of the admin app
@import '../../../admin/static/css/mixin'

setupTheme($primaryColor = $blueColor, $secondaryColor = $lightGrey, $linkColor = null)
  
  if !$linkColor
    $linkColor = darken($primaryColor, 20%)

  a
    color: $linkColor
    &.button
      background: $primaryColor

  blockquote
    border-color: $primaryColor
    &:before
      color: $primaryColor

  button, .button
    background: $primaryColor
    &:hover
      background: darken($primaryColor, 5%)
    &.plain
      color: $primaryColor

  .container
    border-color: $primaryColor

  .site-name
    b, strong
      color: $primaryColor

  .site-promo
    color: $primaryColor

  .main-nav,
  .toc-nav,
  .collection-nav
    .icon
      background: $primaryColor
      &:hover
        background: darken($primaryColor, 10%)
    > ul
      background: $primaryColor
      &:before
        background: $primaryColor
      > li
        a
          &:hover
            background: darken($primaryColor, 5%)
          &.active
            background: darken($primaryColor, 10%)

  article
    .sponsor
      .label
        background: $primaryColor

  article.home
    .collections    
      > ul
        > li
          .updated
            background: $primaryColor
            border-color: $primaryColor
          &:hover
            border-color: $primaryColor
            a
              background: $primaryColor
            .updated
              color: $primaryColor

  article.essay
    .author
      border-color: $primaryColor

  footer
    border-color: $primaryColor
